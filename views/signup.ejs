<%- include('parts/header')%>
<%- include('parts/navbar')%>

<%
  let usernameError = validateInput.find(err => err.param === 'username');
  let emailError = validateInput.find(err => err.param === 'email');
  let passwordError = validateInput.find(err => err.param === 'password');
  let confirmPasswordError = validateInput.find(err => err.param === 'confirm-password');
%>
<div class="container text-center mt-3 col d-flex justify-content-center">
    <div class="card w-50" style="width: 18rem;">

        
        <div class="card-body">
            <h3 class="card-title bg-light text-primary py-2">Signup</h3>

            <form action="/signup" method="POST">
        
                <div class="mb-3 row">
                    <label for="userName" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                      <input type="text" name="username" class="form-control" id="userName" placeholder="Username">
                    </div>
                  </div>
                  <%if(usernameError){%>
                    <div class="alert alert-danger">
                      <%=usernameError.msg%>
                    </div>
                   <% } %>


                <div class="mb-3 row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                      <input type="email" name="email" class="form-control" id="staticEmail" placeholder="email@example.com">
                    </div>
                  </div>
                  <%if(emailError){%>
                    <div class="alert alert-danger">
                      <%=emailError.msg%>
                    </div>
                   <% } %>


                  <div class="mb-3 row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                      <input type="password" name="password" class="form-control" id="inputPassword">
                    </div>
                  </div>
                  <%if(passwordError){%>
                    <div class="alert alert-danger">
                      <%=passwordError.msg%>
                    </div>
                   <% } %>


                  <div class="mb-3 row">
                    <label for="confirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
                    <div class="col-sm-10">
                      <input type="password" name="confirm-password" class="form-control" id="confirmPassword">
                    </div>
                  </div>
                  <%if(confirmPasswordError){%>
                    <div class="alert alert-danger">
                      <%=confirmPasswordError.msg%>
                    </div>
                   <% } %>
        
                  <input type="submit" value="Signup" class="btn btn-primary">
            </form>

        </div>
    </div>
</div>
<%- include('parts/footer')%>